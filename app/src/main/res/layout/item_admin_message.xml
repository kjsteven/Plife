<?xml version="1.0" encoding="utf-8"?>

<!-- item_admin_message.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:layout_gravity="start">

    <TextView
        android:id="@+id/textViewAdminMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/admin_message_background"
        android:padding="10dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewMessageTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAdminMessage"
        android:paddingTop="4dp"
        android:text="Message timestamp"
        android:textColor="#AAAAAA"
        android:textSize="12sp" />


</RelativeLayout>
